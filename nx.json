{
  "installation": {
    "version": "20.1.0"
  },
  "targetDefaults": {
    "@nx/esbuild:esbuild": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["default", "^default"]
    }
  },
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    },
    {
      "plugin": "@nx/jest/plugin",
      "options": {
        "targetName": "test"
      },
      "exclude": [
        "apps/hello-world-e2e/**/*",
        "apps/expressjs-hello-world-e2e/**/*",
        "apps/todo-backend-e2e/**/*"
      ]
    }
  ]
}
