{
  "name": "server-statistics",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/server-statistics/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["codegen", "compile:codegen"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "target": "node20.10.0",
        "outputPath": "dist/apps/server-statistics",
        "format": ["cjs"],
        "bundle": true,
        "main": "apps/server-statistics/src/main.ts",
        "tsConfig": "apps/server-statistics/tsconfig.app.json",
        "assets": [
          "apps/server-statistics/src/assets",
          {
            "input": "{projectRoot}/src/",
            "glob": "schema.graphql",
            "output": "."
          }
        ],
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build", "compose:up"],
      "options": {
        "buildTarget": "server-statistics:build",
        "runBuildTargetDependencies": false,
        "port": 0
      },
      "configurations": {
        "development": {
          "buildTarget": "server-statistics:build:development"
        },
        "production": {
          "buildTarget": "server-statistics:build:production"
        }
      }
    },
    "codegen": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "rm -rf {projectRoot}/__generated__ {projectRoot}/graphql.schema.json",
          "gql-gen --config {projectRoot}/codegen.ts"
        ],
        "parallel": false
      }
    },
    "compose:up": {
      "executor": "nx:run-commands",
      "parallelism": false,
      "cache": false,
      "options": {
        "commands": [
          {
            "command": "docker compose up -d",
            "forwardAllArgs": true
          }
        ],
        "cwd": "{projectRoot}"
      }
    },
    "compose:down": {
      "executor": "nx:run-commands",
      "parallelism": false,
      "cache": false,
      "options": {
        "commands": [
          {
            "command": "docker compose down",
            "forwardAllArgs": true
          }
        ],
        "cwd": "{projectRoot}"
      }
    }
  }
}
